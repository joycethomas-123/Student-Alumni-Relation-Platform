 <section style="padding-top:140px">
 <section class="container showuser1">
     {{#if usersAll}}
    <table style="width:100%;border-collapse: collapse;">
    <tr>
        <th class="table_title">Profile Image</th>
        <th class="table_title_name">Name</th>
        <th class="table_title_status">Company name</th>
        <th class="table_title">Show profile</th>
    </tr>
    {{#each usersAll}}

        <tr>
            <td style="padding: 10px;">
                <img class="rounded-circle profileImageAlternate" src="/user-images/{{this._id}}.jpg" alt="Profile Image" style="width: 50px;height: 50px;border-radius: 50%;object-fit: contain;">
            </td>
            <td class="all_namers_search_name">{{this.Name}}</td>
            <td class="all_namers_search_status"><span style="color:rgb(161, 94, 40);">{{this.working.workingCompanyName}}</span></td>
            <td class="all_namers_search">
                <a href="/admin/admin-view-profile/{{this._id}}" class="btn moreAdvanceDD">profile</a>
            </td>
        </tr>
    {{/each}}
    </table>
 </section>
 {{/if}}

 {{#if usersAll}}
<section class="container showuser2">
    {{#each usersAll}}
    <div>
        <img class="rounded-circle profileImageAlternate" src="/user-images/{{this._id}}.jpg" alt="Profile Image" style="width: 50px;height: 50px;border-radius: 50%;object-fit: contain;">
    </div>
        <div>
            <p class="user2_para_head" style="margin-top: 10px;">Name : </p>
            <p class="user2_para_content">{{this.Name}}</p>
        </div>
        <div>
            <p class="user2_para_head">Working company name : </p>
            <p class="user2_para_content">{{this.working.workingCompanyName}}</p>
        </div>
        <div style="margin-bottom: 80px;">
            <a href="/admin/admin-view-profile/{{this._id}}" class="btn moreAdvanceDD">profile</a>
        </div>
    {{/each}}
</section>
{{/if}}
</section>

 <script>
    document.addEventListener("DOMContentLoaded", function () {
        const profileImages = document.querySelectorAll('.profileImageAlternate');
        profileImages.forEach(img => {
            const imageUrl = img.src;
            fetch(imageUrl)
                .then(response => {
                    if (!response.ok) {
                        img.src = "/user-images/user.png";
                    }
                })
                .catch(error => {
                    console.error("Error fetching image:", error);
                    img.src = "/user-images/user.png";
                });
        });
    });
</script>