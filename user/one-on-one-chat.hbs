                    <div class="user-circle">
                            <img class="user-image profileImageAlternate" src="/user-images/{{this.Sender_Id}}.jpg" alt="User Image">
                    </div>
                {{/if}}
                {{#if this.Recieve}}
                    <div class="user-circle">
                            <img class="user-image profileImageAlternate" src="/user-images/{{this.Reciever_Id}}.jpg" alt="User Image">
                    </div>
                {{/if}}

                <div style="display: flex; flex-direction: column; width: 100%;">
                    {{#if this.textMessage}}
                        {{#if this.noreply}}
                            <div class="reply">replied to : <p class="replytext">{{this.actualMessageContent}}</p></div>
                        {{/if}}
                    {{/if}}

                        {{#if this.Send}}<div class="user-name">{{this.Sender_name}}</div>{{/if}}
                        {{#if this.Recieve}}<div class="user-name">{{this.Sender_name}}</div>{{/if}}

                    {{#if this.multimedia}}
                        <div class="grid-container extra-items">
                            {{#if this.imagePresent}}
                                {{#each this.ImageNames}}
                                    {{#if ../Send}}
                                        <div class="grid-item">
                                            <img class="preview" src="/one-on-one-chat/{{../Sender_Id}}/{{../Reciever_Id}}/{{../MessageId}}/{{this}}" alt="Image {{@index}}">
                                        </div>
                                    {{/if}}
                                    {{#if ../Recieve}}
                                        <div class="grid-item">
                                            <img class="preview" src="/one-on-one-chat/{{../Reciever_Id}}/{{../Sender_Id}}/{{../MessageId}}/{{this}}" alt="Image {{@index}}">
                                        </div>
                                    {{/if}}
                                {{/each}}
                            {{/if}}

                            {{#if videoPresent}}
                                {{#each this.VideoNames}}
                                    {{#if ../Send}}
                                        <div class="grid-item">
                                            <video class="preview" controls>
                                                <source src="/one-on-one-chat/{{../Sender_Id}}/{{../Reciever_Id}}/{{../MessageId}}/{{this}}" type="video/mp4">
                                            </video>
                                        </div>
                                    {{/if}}
                                    {{#if ../Recieve}}
                                        <div class="grid-item">
                                            <video class="preview" controls>
                                                <source src="/one-on-one-chat/{{../Reciever_Id}}/{{../Sender_Id}}/{{../MessageId}}/{{this}}" type="video/mp4">
                                            </video>
                                        </div>
                                    {{/if}}
                                {{/each}}
                            {{/if}}

