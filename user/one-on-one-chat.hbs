<div id="chat-container" >
    <div id="chat-messages">
        {{#each messages}}
            <div class="message" {{#if this.Send}} style="background-color:rgb(123, 180, 230);margin-left:auto;border-radius: 20px 20px 0px 20px;" {{/if}} id="{{this.MessageId}}">
