<style>
    body{
        background-image: url('/images/logo_transparent1.png');
        background-size: 70% auto;
        background-position: center bottom 55%;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }
    @media (max-width: 768px) {
        body {
            background-image: url('/images/logo1.png');
            background-position: center bottom 40%;
        }
    }


    .button-container {
        display: flex;
        justify-content: space-between;
        width: 100%;
    }

    .btn_view_edit_intern{
        width: 110px;
        background-color: rgb(38, 82, 164);
        color: white;
        font-weight: 700;
        border-radius: 10px;
        padding: 8px;
        transition: background-color 0.3s ease;
    }
    .btn_view_edit_intern_delete{
        margin-left: 10px;
    }
    .btn_view_edit_intern_request{
        margin-left: 10px;
    }
    .btn_view_edit_intern:hover{
        background-color:  rgb(123, 180, 230);
        color: rgb(38, 82, 164);
    }

    .internsssdata{
        margin-top: 50px; 
        background-color: rgba(226, 229, 230, 0.8);
        box-shadow: 0 0px 4px rgba(0, 0, 0, 0.6);
        border-radius: 15px;
        display:flex;
        flex-direction: row;
        align-items: center;
    }

    .internss_datas{
        margin:10px;
    }

    .intern_image_data{
        object-fit: contain; 
        border-radius: 10px; 
        max-width: 350px;
        max-height: 350px;
        margin-left: 206px;
    }

    .labelled_intern_data{
        font-weight: 500;
    }

    @media (max-width: 1200px) {
        .btn_view_edit_intern{
    }
    }
    @media (max-width: 1000px) {
        .internsssdata{
        flex-direction: column;
    }
    .intern_image_data{
        margin-left: 10px;
        margin-bottom: 20px;
    }
    }
    @media (max-width: 766px) {
    .intern_image_data{
        margin-left: 1px;
    }
    }
    @media (max-width: 530px) {
    .intern_image_data{
        max-width: 400px;
    }
    }
    @media (max-width: 430px) {
    .intern_image_data{
        max-width: 350px;
    }
    .btn_view_edit_intern{
        width: 105px;
        font-weight: 500;
        padding: 8px;
    }
 
    .btn_view_edit_intern_request{
        margin-left: 7px;
    }
    }
    @media (max-width: 380px) {
    .intern_image_data{
        max-width: 320px;
    }
    .btn_view_edit_intern{
        width: 95px;
    }
    }

</style>

<section class="container" style="padding-top: 180px;">
    {{#each internsdata}}
    <div class="internsssdata">
        <div class="internss_datas">
            <h6><strong>Currently looking for : </strong></h6>
            <p class="card-text labelled_intern_data">{{this.jobintern}}</p><br>
            <h6><strong>Seeking for job / internship in the field of : </strong></h6>
            <p class="card-text labelled_intern_data">{{this.Interest}}</p>
            <h6><strong>Work mode preffered</strong></h6>
            <p class="card-text labelled_intern_data">{{this.workmode}}</p> 
            <div class="button-container">
                <a href="/edit-internship/{{this._id}}" class="btn btn_view_edit_intern btn_view_edit_intern_edit">Edit</a>
                <a href="/internship-details/{{this._id}}" class="btn btn_view_edit_intern btn_view_edit_intern_request">View</a>
                <a href=""  class="btn btn_view_edit_intern btn_view_edit_intern_delete " onclick="deleteIntern('{{this._id}}')">Delete</a>
            </div>   
        </div>
        <div>
            <img class="intern_image_data" src="/internship-folder/profile-pictures/{{this._id}}.jpg" alt="No image available">
        </div>
    </div>
    {{/each}}
</section>

<script>
    function deleteIntern(internshipId) {
        if (confirm("Do you want to delete this internship application from the Portal?")) {
            $.ajax({
            url: '/delete-internship-form-portal',
            method: 'post',
            data: {
                InterN: internshipId,
            },
            success: function (response) {
                if (response.deleteIntern) {
                location.reload();
                }
            },
            });
        }
    }
</script>
