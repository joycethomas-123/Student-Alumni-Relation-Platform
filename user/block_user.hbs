 <script>
    document.addEventListener("DOMContentLoaded", function () {
        const profileImages = document.querySelectorAll('.profileImageAlternate');
        profileImages.forEach(img => {
            const imageUrl = img.src;
            fetch(imageUrl)
                .then(response => {
                    if (!response.ok) {
                        img.src = "/user-images/user.png";
                    }
                })
                .catch(error => {
                    console.error("Error fetching image:", error);
                    img.src = "/user-images/user.png";
                });
        });
    });
</script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const changeViewBtn = document.querySelector('.change_view_btn');
        const showuser1 = document.querySelector('.showuser1');
        const showuser2 = document.querySelector('.showuser2');
        const moreAdvanceDD = document.querySelector('.moreAdvanceDD');

        changeViewBtn.addEventListener('click', function () {
            // Toggle visibility of showuser1 and showuser2
            if (showuser1.style.display === 'none') {
                showuser1.style.display = 'block';
                showuser2.style.display = 'none';
            } else {
                showuser1.style.display = 'none';
                showuser2.style.display = 'block';
            }
        });
    });
</script>
<script>
    function confirmunblock(id) {
        var confirmResult = confirm("Are you sure you want to unblock this user?");
        if (confirmResult) {
            // If the user clicks OK, redirect
            window.location.href = "/unblock_user/"+id
        } else {
            // If the user clicks Cancel, do nothing
            return false;
        }
    }

    function confirmselect(id) {
        var confirmResult = confirm("Are you sure you want to select this user?");
        if (confirmResult) {
            // If the user clicks OK, redirect
            window.location.href = "/block_user_byname/"+id
        } else {
            // If the user clicks Cancel, do nothing
            return false;
        }
    }
</script>
