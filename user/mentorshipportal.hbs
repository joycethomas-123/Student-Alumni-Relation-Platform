        .overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 2;
        }

        .popup-form {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 20px;
            background-color: #f1f1f1;
            border: 1px solid #ccc;
            border-radius: 5px;
            z-index: 3;
            width: 30%;
        }

        .popup-form .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
        }

        .popup-form .close:hover {
            color: red; /* Change the color on hover as desired */
        }

        .popup-form textarea {
            width: 100%;
            margin-bottom: 10px;
            border-radius: 15px;
            border: none;
            box-shadow: 0 0px 4px rgba(0, 0, 0, 0.4);
            padding: 10px;
            font-size: 18px;
            box-sizing: border-box;
            resize: vertical; /* Enable vertical resizing */
