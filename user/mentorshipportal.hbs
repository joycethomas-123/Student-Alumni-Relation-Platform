<script>

        function scrollToBottom() {
            document.body.scrollTop = document.body.scrollHeight;
            document.documentElement.scrollTop = document.documentElement.scrollHeight;
        }

        window.onload = function () {
            scrollToBottom();
        };


        function showPopupForm() {
            var overlay = document.getElementById("overlay");
            var popupForm = document.getElementById("popupForm");
            overlay.style.display = "block";
            popupForm.style.display = "block";
            scrollToBottom();
        }

        function closePopupForm() {
            var overlay = document.getElementById("overlay");
            var popupForm = document.getElementById("popupForm");
            overlay.style.display = "none";
            popupForm.style.display = "none";
        }

        function showReplyForm(mentorId) {
            var overlay = document.getElementById("overlay");
            var replyForm = document.getElementById("replyForm");
            var hiddenMentorIdInput = document.getElementById("hiddenMentorId");

            hiddenMentorIdInput.value = mentorId;

            overlay.style.display = "block";
            replyForm.style.display = "block";
        }

        function closeReplyForm() {
            var overlay = document.getElementById("overlay");
            var replyForm = document.getElementById("replyForm");
            overlay.style.display = "none";
            replyForm.style.display = "none";
        }

        function showQuestionEditForm(mentorId,questionInput) {
            var overlay = document.getElementById("overlay");
            var editQuestionForm = document.getElementById("editQuestionForm");
            var hiddenMentorIdInput = document.getElementById("hiddenQuestionId");
            var questionInputTextarea = document.getElementById("questionInputEdit");

            hiddenMentorIdInput.value = mentorId;
            questionInputTextarea.value = questionInput;

            overlay.style.display = "block";
            editQuestionForm.style.display = "block";
        }

        function closeQuestionEditForm() {
            var overlay = document.getElementById("overlay");
            var editQuestionForm = document.getElementById("editQuestionForm");
            overlay.style.display = "none";
            editQuestionForm.style.display = "none";
        }

        function showReplyReplyForm(replyId,userName,questionId) {
            var overlay = document.getElementById("overlay");
            var replyReplyForm = document.getElementById("replyReplyForm");
            var hiddenReplyIdInput = document.getElementById("hiddenReplyId");
            var hiddenMentorIdInput = document.getElementById("hiddenQuestionId");
            var hiddenReplyUsernameInput = document.getElementById("hiddenReplyUsername");
            var replyInputTextarea = document.getElementById("replyInput");

            hiddenReplyIdInput.value = replyId;
            hiddenReplyUsernameInput.value = userName;
            hiddenMentorQuestionIdInput.value = questionId;

            overlay.style.display = "block";
            replyReplyForm.style.display = "block";
        }

        function closeReplyReplyForm() {
            var overlay = document.getElementById("overlay");
            var replyReplyForm = document.getElementById("replyReplyForm");
            overlay.style.display = "none";
            replyReplyForm.style.display = "none";
        }

        function showReplyReplyEditForm(replyId,questionId,userInput) {
            var overlay = document.getElementById("overlay");
            var replyReplyEditForm = document.getElementById("replyReplyEditForm");
            var hiddenReplyEditIdInput = document.getElementById("hiddenEditReplyId");
            var hiddenMentorEditIdInput = document.getElementById("hiddenMentorEditQuestionIdInput");
            var replyInputEditTextarea = document.getElementById("replyreplyEditInput");

            hiddenReplyEditIdInput.value = replyId;
            hiddenMentorEditIdInput.value = questionId;
            replyInputEditTextarea.value = userInput;

            overlay.style.display = "block";
            replyReplyEditForm.style.display = "block";
        }

        function closeReplyReplyEditForm() {
            var overlay = document.getElementById("overlay");
            var replyReplyEditForm = document.getElementById("replyReplyEditForm");
            overlay.style.display = "none";
            replyReplyEditForm.style.display = "none";
        }

        function confirmSubmit() {
            var confirmation = confirm("Are you sure you want to submit the edited question?");
            return confirmation;
        }

        function resizeTextarea() {
            var textarea = document.getElementById("questionInput");
            textarea.style.height = "auto";
            textarea.style.height = (textarea.scrollHeight) + "px";
        }

        function refreshPage() {
            location.reload(true);
            scrollToBottom();
        }
        

         function deleteMentor(mentorId) {
            if (confirm("Do you want to delete this question from portal?")) {
                $.ajax({
                url: '/delete-mentor',
                method: 'post',
                data: {
                    MentoR: mentorId,
                },
                success: function (response) {
                    if (response.deleteMentor) {
                    location.reload();
                    }
                },
                });
            }
        }

        function deleteMentorReply(replyId,questionId) {
            if (confirm("Do you want to delete this response from portal?")) {
                $.ajax({
                url: '/delete-mentor-reply',
                method: 'post',
                data: {
                    MentorreplY: replyId,
                    QuestioN:questionId
                },
                success: function (response) {
                    if (response.deleteMentorReply) {
                    location.reload();
                    }
                },
                });
            }
        }

    </script>

    <script>
    document.addEventListener("DOMContentLoaded", function () {
        const profileImages = document.querySelectorAll('.profileImageAlternate');
        profileImages.forEach(img => {
            const imageUrl = img.src;
            fetch(imageUrl)
                .then(response => {
                    if (!response.ok) {
                        img.src = "/user-images/user.png";
                    }
                })
                .catch(error => {
                    console.error("Error fetching image:", error);
                    img.src = "/user-images/user.png";
                });
        });
    });
</script>
