        <div class="header_heading">Welcome to Mentorship Portal</div>
        <div style="" class="container-fluid">
        {{#each mentors}}
            <div class="mentorcontainer">
                <div class="profile_data" >
                    <div class="user-circle">
                        <a style="text-decoration: none;" href="/view-profile/{{this.userId}}">
                            <img class="user-image profileImageAlternate" src="/user-images/{{this.userId}}.jpg" alt="User Image">
                        </a>
                    </div>
