                <textarea id="questionInput" name="questionInput" placeholder="Add your reply" rows="5" oninput="resizeTextarea()"></textarea>
                <br>
                <button type="submit">Submit</button>
            </form>
        </div>

        <div id="editQuestionForm" class="popup-form">
            <span class="close" onclick="closeQuestionEditForm()">&times;</span>
