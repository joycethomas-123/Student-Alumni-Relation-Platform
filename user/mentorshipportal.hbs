                <textarea id="questionInputEdit" name="questionInput" rows="5" oninput="resizeTextarea()"></textarea>
                <br>
                <button type="submit">Submit</button>
            </form>
        </div>

        <div id="replyReplyForm" class="popup-form">
            <span class="close" onclick="closeReplyReplyForm()">&times;</span>
            <form id="replyReplyForm" action="/add-reply-ofreply" method="POST" onsubmit="refreshPage()">
            
                <input type="hidden" id="hiddenReplyId" name="replyId" value="">
                <input type="hidden" id="hiddenReplyUsername" name="replytoUsername" value="">
                <input type="hidden" id="hiddenMentorQuestionIdInput" name="questionId" value="">
                <label for="questionInput">Add your reply</label>
                <textarea id="replyInput" name="replyInput" placeholder="Add your reply" rows="5" oninput="resizeTextarea()"></textarea>
                <br>
                <button type="submit">Submit</button>
            </form>
        </div>

        <div id="replyReplyEditForm" class="popup-form">
            <span class="close" onclick="closeReplyReplyEditForm()">&times;</span>
            <form id="replyReplyEditForm" action="/edit-reply" method="POST" onsubmit="refreshPage()">
                <input type="hidden" id="hiddenEditReplyId" name="replyId" value="">
                <input type="hidden" id="hiddenMentorEditQuestionIdInput" name="questionId" value="">
                <label for="questionInput">Edit your reply</label>
                <textarea id="replyreplyEditInput" name="replyInput" placeholder="Add your reply" rows="5" oninput="resizeTextarea()"></textarea>
